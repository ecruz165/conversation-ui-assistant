{
  "name": "@conversation-ui/testing",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Conversation UI Assistant",
  "private": true,
  "type": "module",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:load": "artillery run load/scenarios/basic-load.yml",
    "test:load:spike": "artillery run load/scenarios/spike-test.yml",
    "test:load:playwright": "artillery run load/scenarios/playwright-load.yml",
    "test:security": "zap-baseline.py -t http://localhost:8080",
    "install:tools": "npm install && npx playwright install",
    "setup": "npm run install:tools"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "artillery": "^2.0.0",
    "artillery-engine-playwright": "^1.0.0",

    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "testing",
    "e2e",
    "load-testing",
    "security-testing",
    "artillery",
    "playwright"
  ]
}
