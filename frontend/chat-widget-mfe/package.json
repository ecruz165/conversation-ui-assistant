{
  "name": "chat-widget-mfe",
  "version": "1.0.0",
  "description": "Distributable chat widget micro frontend for conversational navigation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "webpack serve --mode development --port 3002",
    "build": "webpack --mode production",
    "build:analyze": "webpack --mode production --analyze",
    "preview": "serve dist -p 3002",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "format": "biome format --write src/",
    "clean": "rm -rf dist",
    "package": "npm pack",
    "start": "npm run dev"
  },
  "keywords": [
    "chat",
    "widget",
    "micro-frontend",
    "module-federation",
    "conversational-navigation",
    "react"
  ],
  "author": "Conversation UI Assistant Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "socket.io-client": "^4.7.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "@module-federation/webpack": "^2.0.0",
    "html-webpack-plugin": "^5.5.3",
