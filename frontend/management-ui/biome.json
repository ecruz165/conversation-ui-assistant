{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "experimentalScannerIgnores": [
      "src/routeTree.gen.ts",
      "**/*.gen.ts",
      "**/*.generated.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
