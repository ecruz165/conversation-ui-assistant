{
  "name": "conversation-ui-assistant",
  "version": "1.0.0",
  "description": "AI Chat agent that helps you navigate a web application to complete your intent.",
  "main": "index.js",
  "scripts": {
    "clean": "mvn clean && pnpm run clean:frontend",
    "clean:all": "mvn clean && pnpm run clean:frontend && docker system prune -f",
    "compile": "mvn compile",
    "test": "mvn test",
    "test:all": "mvn test && pnpm run test:frontend",
    "test:frontend": "pnpm run --recursive --parallel test",
    "test:unit": "mvn test",
    "test:integration": "mvn verify",
    "package": "mvn package",
    "install": "mvn install && pnpm install",
    "verify": "mvn verify",
    "deploy": "mvn deploy",
    "build": "mvn clean package && pnpm run build:frontend",
    "build:all": "mvn clean install && pnpm run build:frontend",
    "build:frontend": "pnpm run --recursive --parallel build",
    "clean:frontend": "pnpm run --recursive --parallel clean",
    "dev:frontend": "pnpm run --recursive --parallel dev",
    "dev:watch": "concurrently \"mvn spring-boot:run -Dspring-boot.run.profiles=dev\" \"pnpm run dev:frontend\"",
    "db:start": "cd infrastructure && docker-compose up -d postgres",
    "db:stop": "cd infrastructure && docker-compose down",
    "db:logs": "cd infrastructure && docker-compose logs -f postgres",
    "db:reset": "cd infrastructure && docker-compose down -v && docker-compose up -d postgres",
    "develop-app": "npm run db:start && mvn clean install",
    "start": "mvn spring-boot:run",
    "start:backend": "mvn spring-boot:run",
    "start:frontend": "pnpm run dev:frontend",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "mvn spring-boot:run -Dspring-boot.run.profiles=dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "pnpm run --recursive --parallel type-check",
    "setup": "pnpm install && pre-commit install",
    "pre-commit": "pre-commit run --all-files",
    "docker:dev": "cd infrastructure && ./docker-manager.sh dev",
    "docker:prod": "cd infrastructure && ./docker-manager.sh prod",
    "docker:stop": "cd infrastructure && docker-compose down",
    "docker:logs": "cd infrastructure && docker-compose logs -f",
    "docker:clean": "docker system prune -af && docker volume prune -f"
  },
  "keywords": [
    "ai",
    "chat",
    "assistant",
    "ui",
    "conversation",
    "web-automation"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "concurrently": "^8.2.2"
  }
}
