# Development environment variables
APP_ENV=development
APP_VERSION=1.0.0-dev

# OpenAI Configuration (optional for development)
OPENAI_API_KEY=sk-dummy-key-for-development-only
OPENAI_ENABLED=false

# Database Configuration
POSTGRES_PASSWORD=conversation_pass

# Security Configuration (development only - not secure!)
JWT_SECRET=dev_jwt_secret_not_for_production_use_only
ENCRYPTION_KEY=dev_encryption_key_32_characters

# External Services
DATABASE_URL=postgresql://conversation_user:conversation_pass@postgres:5432/conversation_ui

# Monitoring and Logging
LOG_LEVEL=DEBUG
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost/api

# Development Settings
DEBUG_MODE=true
HOT_RELOAD_ENABLED=true
MOCK_EXTERNAL_SERVICES=true

# Rate Limiting (relaxed for development)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=480
SESSION_CLEANUP_INTERVAL_MINUTES=60

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/tmp/uploads
