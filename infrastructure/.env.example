# Environment variables for Conversation UI Assistant
# Copy this file to .env and update the values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ENABLED=true

# Database Configuration
POSTGRES_PASSWORD=conversation_pass

# Application Configuration
APP_ENV=development
APP_VERSION=1.0.0

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# External Services
DATABASE_URL=postgresql://conversation_user:conversation_pass@postgres:5432/conversation_ui

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost/api

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@conversation-ui.local

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/tmp/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL_MINUTES=30

# Development Settings
DEBUG_MODE=false
HOT_RELOAD_ENABLED=false
MOCK_EXTERNAL_SERVICES=false
